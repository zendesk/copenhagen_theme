<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
    {{search submit=false placeholder='Search our help center'}}
  </nav>

  <header id="main-content" class="page-header">
    <h1>{{t 'search_results'}}</h1>
    <div class="page-header-description">{{t 'results' query=query count=results_count}}</div>
  </header>

  <div class="search-results">
    <section class="search-results-column">
      {{#if article_results}}
        <ul class="search-results-list">
          {{#each article_results}}
            <li class="search-result">
              <h2><a href="{{url}}" class="search-result-link">{{title}}</a></h2>
              {{#if vote_sum}}
                <span class="search-result-votes meta-count">{{vote_sum}}</span>
              {{/if}}
              <ul class="meta-group">
                <li class="meta-data">Updated {{date created_at timeago=true}}</li>
              </ul>
              <div class="search-result-description">{{text}}</div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>
          We couldn't find any support articles related to "{{query}}."
          Try browsing our {{#link 'help_center'}} help center{{/link}}.
        </p>
        <br>
        <div class="callout alert">
          Looking for Artstor Digital Library search results instead? <a href="https://library.artstor.org">Continue searching on the Artstor homepage</a>
        </div>
      {{/if}}
    </section>
  </div>

  {{pagination}}
</div>
