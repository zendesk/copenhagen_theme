<footer class="footer">
  {{#if settings.show_contact_us_section}}
      <div class="contact-block">
        <div class="footer-inner">
          <h1>{{settings.contact_us_header}}</h1>
          {{#link 'new_request' class='submit-a-request btn' role='button'}}
            Contact Us
          {{else}}
          <span class='link-not-found'>
            Contact Us link is not available for you.
          </span>
          {{/link}}
        </div>
      </div>
  {{/if}}
  <div class="footer-inner">
    <div class="company-info">
        <img src="{{settings.mit_footer_logo}}">
        <address>
          {{settings.mit_address}}
        </address>
      </div>
    <ul class="footer-nav">
      <li><a href={{settings.mit_home}}>MIT xPRO Home</a></li>
      <li><a href={{settings.mit_about_us}}>About Us</a></li>
    </ul>
    <div class="center-content">
      <ul class="footer-sub-nav">
        <li><a href={{settings.mit_tos}}>Terms of Service</a></li>
        <li><a href={{settings.mit_privacy_policy}}>Privacy Policy</a></li>
        <li><a href={{settings.mit_honor_code}}>Honor Code</a></li>
      </ul>
      <span class="copyright">Â© <span id="date"></span> All rights reserved. <a href={{settings.mit_home}}>MIT xPRO</a>.</span>
    </div>
    <div class="footer-language-selector">
      {{#if alternative_locales}}
        <div class="dropdown language-selector">
          <button class="dropdown-toggle" aria-haspopup="true">
            {{current_locale.name}}
          </button>
          <span class="dropdown-menu dropdown-menu-end" role="menu">
            {{#each alternative_locales}}
              <a href="{{url}}" dir="{{direction}}" rel="nofollow" role="menuitem">
                {{name}}
              </a>
            {{/each}}
          </span>
        </div>
      {{/if}}
    </div>
  </div>
</footer>
<script>
  document.getElementById("date").append(new Date().getFullYear());
</script>
